{
  "compilerOptions": {
    "target": "es2022",                    
    "module": "commonjs",                 
    "lib": ["es2022"],                     
    "allowJs": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "strict": true,

    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "exclude": [
    "public",
    "dist"
  ],
  "ts-node": {
    "files": true
  }
}
